{% extends "layout.njk" %}

{% block content %}

    <section class="search-products container">

        <aside>
            <div class="header">
                {# <h2>{{search.term}}</h2> #}
                <h2>Computador</h2>
                <p>12 encontrados</p>
            </div>

            <nav class="categories">
                <h4>Categorias</h4>
                <ul>
                    <li><a href="#">Eletr√¥nicos</a></li>
                    <li><a href="#">Comidas</a></li>
                </ul>
            </nav>

        </aside>

        <div class="items">

            {% for product in products %}
                <div class="product">
                    <div class="image" 
                         style="background-image: url({{ product.img if product.img else '//placehold.it/500x300?text=PRODUTO-SEM-FOTO'}})">
                    </div>  
                        
                        {% if product.oldPrice != product.price %}
                            <div class="old-price">{{product.oldPrice}}</div>
                        {% endif %}

                        <p>{{product.price}}</p>
                        <h4>{{product.name}}</h4>

                        <a href="/products/{{product.id}}" class="button">Ver produto</a>
                </div>
            {% endfor %}

        </div>
    </section>

{% endblock content %}