{% extends "layout.njk" %}
{% import "parts/cards.njk" as card %}

{% block content %}

    {% call card.render('Esqueceu a senha?','password container') %}

        <form method="POST" action="/users/forgot-password">

            <div class="fields">
                
                <div class="item">
                    <div>Email</div>

                    <div class="input">
                        <input 
                            type="email" 
                            name="email" 
                            placeholder="Digite o email cadastrado"
                            value="{{user.email}}"
                            onblur="Validate.apply(this,'isEmail')"
                            required>
                    </div>

                </div>

            </div>

            <button class="button" type="submit">Recuperar</button>

        </form>
    
    {% endcall %}

{% endblock content %}

